{% extends 'base.html.twig' %}

{% block title %}Todo index{% endblock %}

{% block body %}
    <h1>Todo index</h1>
    {{ form_start(form) }}
        {{ form_widget(form) }}
        <input type = "submit" value = "GO" />
    {{ form_end(form) }}
    <table class="table">
        <thead>
            <tr>
                <th><a href="{{ path('app_todo_index')}}?orderby=id&order=asc">Id</a></th>
                <th><a href="{{ path('app_todo_index')}}?orderby=name&order=asc">Name</a></th>
                <th>Description</th>
                <th>Status</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for todo in todos %}
            {% if (aff) is defined and (aff) %}
                {% if(todo.done != true) %}
                    <tr>
                        <td>{{ todo.id }}</td>
                        <td>{{ todo.name }}</td>
                        <td>{{ todo.description }}</td>
                        <td>A faire</td>

                        <td>
                            <a href="{{ path('app_todo_show', {'id': todo.id}) }}">show</a>
                            <a href="{{ path('app_todo_edit', {'id': todo.id}) }}">edit</a>
                        </td>
                    </tr>
                {% endif %}
            {% else %}
            <tr>
                <td>{{ todo.id }}</td>
                <td>{{ todo.name }}</td>
                <td>{{ todo.description }}</td>
                {% if(todo.done) %}
                    <td>fait</td>
                {% else %}
                    <td>A faire</td>
                {% endif %}

                <td>
                    <a href="{{ path('app_todo_show', {'id': todo.id}) }}">show</a>
                    <a href="{{ path('app_todo_edit', {'id': todo.id}) }}">edit</a>
                </td>
            </tr>
            {% endif %}
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_todo_new') }}">Create new</a>
{% endblock %}
